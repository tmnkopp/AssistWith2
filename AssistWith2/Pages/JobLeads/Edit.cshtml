@page "{id:int}"
@model AssistWith.Pages.JobLeads.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
} 
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="row">
                <div class="col-sm-2 form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
                <div class="col-sm-6 form-group">
                    <h2>JobLead Edit </h2>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobLead.JobLeadId" />
            <div class="form-group">
                <label asp-for="JobLead.JobLeadCode" class="control-label"></label>
                <input asp-for="JobLead.JobLeadCode" class="form-control" />
                <span asp-validation-for="JobLead.JobLeadCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.CompanyName" class="control-label"></label>
                <input asp-for="JobLead.CompanyName" class="form-control" />
                <span asp-validation-for="JobLead.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.ContactName" class="control-label"></label>
                <input asp-for="JobLead.ContactName" class="form-control" />
                <span asp-validation-for="JobLead.ContactName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.ContactPhone" class="control-label"></label>
                <input asp-for="JobLead.ContactPhone" class="form-control" />
                <span asp-validation-for="JobLead.ContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.ContactAddress" class="control-label"></label>
                <input asp-for="JobLead.ContactAddress" class="form-control" />
                <span asp-validation-for="JobLead.ContactAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.PortalUrl" class="control-label"></label>
                <input asp-for="JobLead.PortalUrl" class="form-control" />
                <span asp-validation-for="JobLead.PortalUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.Username" class="control-label"></label>
                <input asp-for="JobLead.Username" class="form-control" />
                <span asp-validation-for="JobLead.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.Password" class="control-label"></label>
                <input asp-for="JobLead.Password" class="form-control" />
                <span asp-validation-for="JobLead.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.JobTitle" class="control-label"></label>
                <input asp-for="JobLead.JobTitle" class="form-control" />
                <span asp-validation-for="JobLead.JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.JobSource" class="control-label"></label>
                <input asp-for="JobLead.JobSource" class="form-control" />
                <span asp-validation-for="JobLead.JobSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.JobSourceURL" class="control-label"></label>
                <input asp-for="JobLead.JobSourceURL" class="form-control" />
                <span asp-validation-for="JobLead.JobSourceURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.ApplyDate" class="control-label"></label>
                <input asp-for="JobLead.ApplyDate" class="form-control" />
                <span asp-validation-for="JobLead.ApplyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.JobDescription" class="control-label"></label>
                <textarea asp-for="JobLead.JobDescription" class="form-control"></textarea>
                <span asp-validation-for="JobLead.JobDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLead.Notes" class="control-label"></label>
                <textarea asp-for="JobLead.Notes" class="form-control"></textarea>
                <span asp-validation-for="JobLead.Notes" class="text-danger"></span>

                <select asp-for="SelectedItems" asp-items="Model.selectList"></select>
            </div>
        </form>
    </div>
</div>
@foreach (var item in Model.Templates)
{
    <hr />

    <h2> @item.Name</h2>
    if (Model.Templates.Count > 1)
    {
    
        <a asp-page="/Docs/Index" 
           asp-route-jobleadid="@Model.JobLead.JobLeadId" 
           asp-route-TemplateName="@item.Name">View</a> 
    }
    if (item.EXT.Contains("html"))
    {
        <fieldset>  @Html.Raw(@item.Content) </fieldset>
    }
    else
    {
        <textarea name="template-content"
                  class="template-content full">@(item.Content)
            </textarea>
    }

}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
